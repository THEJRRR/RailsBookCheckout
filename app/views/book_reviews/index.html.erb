<h1>Listing book_reviews</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Book</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_reviews.each do |book_review| %>
      <tr>
        <td><%= book_review.content %></td>
        <td><%= book_review.user %></td>
        <td><%= book_review.book %></td>
        <td><%= link_to 'Show', book_review %></td>
        <td><%= link_to 'Edit', edit_book_review_path(book_review) %></td>
        <td><%= link_to 'Destroy', book_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book review', new_book_review_path %>
